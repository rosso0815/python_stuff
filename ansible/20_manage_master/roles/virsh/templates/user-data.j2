#cloud-config

# cloud init 22.1.5 for RH9

timezone: Europe/Zurich

bootcmd:
  # FIXME
  - hostnamectl set-hostname  {{ item }}

users:
  - name: 'pfistera'
    shell: '/bin/bash'
    lock_passwd: false
    plain_text_passwd: 'root'
    sudo: 'ALL=(ALL) NOPASSWD:ALL'
    primary_group: 'wheel'
    ssh_authorized_keys: 'ssh-rsa  pfistera@theo.local'

system_info:
  default_user:
    name: 'pfistera'
    sudo: 'ALL=(ALL) NOPASSWD:ALL'
    groups: 'wheel'

yum_repos:
  epel:
    baseurl: https://dl.fedoraproject.org/pub/epel/9/Everything/$basearch
    enabled: true
    failovermethod: priority
    gpgcheck: false
    name: epel stuff

packages:
  - python3-pip-wheel
  - git
  - wget
  - curl
  - vim
  - python3-kubernetes
  - netcat

final_message: "hey ROSSO , The system is finally up, after $UPTIME seconds"
